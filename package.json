{
  "devDependencies": {
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.9",
    "esbuild-envfile-plugin": "^1.0.7",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "format": "npx prettier --write ."
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "objectWrap": "collapse",
    "arrowParens": "avoid",
    "printWidth": 125
  },
  "type": "module"
}
